# gbox environment variable configuration example
# Copy this file to .env or .env.local for custom configuration
# Priority: command line parameters > .env.local > .env > default values

# ============================================
# Resource limit configuration
# ============================================

# Container memory limit (default: 4g)
# Examples: 4g, 8g, 16g
GBOX_MEMORY=4g

# Container CPU cores (default: 2)
# Examples: 2, 4, 8
GBOX_CPU=2

# ============================================
# Network configuration
# ============================================

# Port mapping configuration (default: no port mapping)
# Format: "host_port:container_port" (multiple ports separated by semicolon)
# Examples:
#   GBOX_PORTS="8000:8000"              # host port 8000 -> container port 8000
#   GBOX_PORTS="8080:8000"              # host port 8080 -> container port 8000
#   GBOX_PORTS="8000:8000;7000:7001"    # multiple port mapping
# GBOX_PORTS=""

# Agent network proxy (default: none)
# Example: http://127.0.0.1:7890
# GBOX_PROXY=""

# ============================================
# Directory configuration
# ============================================

# Read-only reference directory list (default: none)
# Format: "directory_path" (multiple directories separated by semicolon)
# All directories are mounted as read-only at the same path in the container
# Used to provide code references from other projects to the AI Agent
# Examples:
#   GBOX_REF_DIRS="/Users/me/project1"
#   GBOX_REF_DIRS="/Users/me/project1;/Users/me/project2"
# GBOX_REF_DIRS=""

# ============================================
# API key configuration
# ============================================

# Anthropic API Key (for Claude)
# ANTHROPIC_API_KEY=""

# ============================================
# Container behavior configuration
# ============================================

# Keep container after exit (default: false)
# When set to true, the container will not be deleted when exiting the agent and can be reused directly
# GBOX_KEEP=false

# Custom container name (default: auto-generated)
# Format: letters, numbers, underscores, dots, hyphens, must start with letter or number
# GBOX_NAME=""

# Auto-cleanup container after exit (default: false)
# When set to true, the container will be automatically deleted on exit
# GBOX_AUTO_CLEANUP=false

# ============================================
# Debug configuration
# ============================================

# Debug mode (default: none)
# Set to happy:* to enable Happy debug logs
# DEBUG=""

# gbox debug mode (default: 0)
# Set to 1 to enable gbox debug output
# GBOX_DEBUG=0

# ============================================
# Advanced configuration
# ============================================

# Container readiness check attempts (default: 30)
# GBOX_READY_ATTEMPTS=30

# Container readiness check interval (seconds, default: 0.2)
# GBOX_READY_DELAY=0.2
